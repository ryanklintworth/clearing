<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('./partials/head.ejs') %>
    <style type="text/css">
      body {
        background-image: url('/images/background-img.jpeg');
        background-size: cover;
        background-attachment: fixed;
      }
    </style>
  </head>
  <body class="index-body">
    <!-- <header>HEADER</header> -->
    <nav>
      <div class="logo">
        <h4>jv</h4>
      </div>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/events">Events</a></li>
      </ul>
    </nav>
    <div class="edit-container">
      <div class="edit-content">
        <div class="form">
          <form class="edit" action="/<%=item._id%>?_method=PUT" method="post">
            <label for="name">Name: </label>
            <input type="text" name="name" value="<%=item.name%>" id="name">
            <label for="price">Price: </label>
            <input type="number" name="price" value="<%=item.price || 0 %>" min="0" step=".01">
            <label for="qty">Quantity: </label>
            <input type="number" name="qty" value="<%=item.qty || 0 %>" min="0" id="qty">
        </div>
        <div class="admin">
          <div class="back-button">
            <a href="/<%=item._id%>"><button type="button" name="button">Back</button></a>
          </div>
          <div class="edit-button">
          <a href="/<%=item._id%>"><input type="submit" name="submit" value="submit"
          </div>
        </div>
      </form>
    </div>
  </div>
  </body>
</html>
